{
    "name": "newon",
    "displayName": "newon",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onCommand:newon.detectAll"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "newon.helloWorld",
                "title": "Hello World"
            },
            {
                "command": "newon.detectEval",
                "title": "newon.detectEval"
            },
            {
                "command": "newon.detectPathTraversal",
                "title": "newon.detectPathTraversal"
            },
            {
                "command": "newon.detectSourceInjection",
                "title": "newon.detectSourceInjection"
            },
            {
                "command": "newon.detectXMLInjection",
                "title": "newon.detectXMLInjection"
            },
            {
                "command": "newon.detectCSRF",
                "title": "newon.detectCSRF"
            },
            {
                "command": "newon.detectLDAPInjection",
                "title": "newon.detectLDAPInjection"
            },
            {
                "command": "newon.fuzz",
                "title": "Run Fuzzing"
            },
            {
                "command": "newon.detectAll",
                "title": "Detect"
            },
            {
                "command": "newon.ai",
                "title": "Detect ai"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "newon.fuzz",
                    "when": "view == extension.fuzzingResultView",
                    "group": "navigation"
                },
                {
                    "command": "newon.ai", 
                    "when": "view == extension.fuzzingResultView",
                    "group": "navigation"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "fuzzing",
                    "title": "Fuzz",
                    "icon": "media/fuzz-icon.svg"
                }
            ]
        },
        "views": {
            "fuzzing": [
                {
                    "id": "extension.fuzzingResultView",
                    "name": "Run Fuzzing"
                }
           ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "build": "npm run compile",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "20.x",
        "@types/vscode": "^1.90.0",
        "@typescript-eslint/eslint-plugin": "^7.11.0",
        "@typescript-eslint/parser": "^7.11.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "acorn-walk": "^8.3.3",
        "axios": "^1.7.5",
        "openai": "^4.63.0"
    }
}
